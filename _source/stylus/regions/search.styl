/* ====================================
    Search Section styling
==================================== */

.search
    position relative
    margin-bottom $spacing-medium
    animation slideDown 1s ease-in-out
    border-bottom 1px solid $c-accent
    box-shadow 0 0 15px $c-accent

    &-form
        clearfix()
        margin 0 auto
        padding $gutter
        background $c-accent--l
        display flex
        justify-content center
        align-items center

        &__input
            display flex
            flex 1
            padding-right $gutter
            max-width 550px

            > input[type="text"]
                flex 1
                border-radius 3px 0 0 3px
                border-right: 1px solid transparent
                &:hover,
                &:focus
                    border-color: rgba(black, .05)

            > input[type="submit"]
                border-radius 0 3px 3px 0

        &.has-no-results
            input:focus,
            input:hover,
            input[type="submit"]
                background red

    &-close
        position relative
        size 0
        background blue
        &:after
            content ''
            display block
            border-radius 50%
            cursor pointer
            size 20px
            relative left -120px top -10px
            background red url("../media/close.svg") center center no-repeat

    &-results
        absolute top $gutter right 0
        font-size 1.5em
        font-weight bold
        color $c-sec
        vertical-align center
        pointer-events none

        >.current
            transition opacity $easing
            &after
                font-size .5em
                content'/'
                display inline-block
                font-weight normal
                vertical-align 25%
                opacity .5
                margin 0 2px


        >.total
            font-size .5em
            position relative
            left -.5em
            opacity .5
            vertical-align 24%

        .no-input & .current
            opacity 0
