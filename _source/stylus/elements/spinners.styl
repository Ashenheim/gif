.spinner
    absolute top 50% left 50%
    size(60px)
    transform translate3d(-50%,-50%,0)
    z-index 2
    display none

    &:before,
    &:after
        content ''
        size 100%
        absolute top left
        border 2px solid $c-main
        border-radius 50%
        border-bottom-color transparent
        animation spinner 500ms linear infinite

    &:after
        size 70%
        margin 15%
        animation-direction alternate
