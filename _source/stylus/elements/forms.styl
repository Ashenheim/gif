/* ====================================
    Form elements styling
==================================== */

input[type=text],
input[type=search],
input[type=url],
input[type=email],
input[type=number],
textarea,
select
    display block
    margin 0
    width 100%
    font-family sans-serif
    font-size 18px
    appearance none
    box-shadow none
    border-radius none
    border none
    margin 0 auto
    padding $gutter
    color $c-sec
    background $c-accent
    transition all $easing

    &:hover,
    &:focus
        outline none
        color white
        background $c-main
        box-shadow 0 1px 5px $c-accent
        &::placeholder { color: white; }

::placeholder
    font-family $font-family
    color $c-accent--d
    line-height 1.2
